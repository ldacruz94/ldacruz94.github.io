---
  interface Props {
	email: string;
  }
  const { email } = Astro.props;
---

<div class="right-line">
	<a href={`mailto:${email}`} class="email">{email}</a>
	<div class="line"></div>
</div>

<style>
.right-line {
	position: fixed;
	right: 2rem;
	bottom: 0;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.line {
	width: 2px;
	height: 100px;
	background-color: rgb(var(--gray));
	margin-top: 1rem;
}

.email {
	writing-mode: vertical-rl;
	text-decoration: none;
	color: rgb(var(--gray-dark));
	font-size: 0.9rem;
	transition: color 0.2s ease;
}

.email:hover {
	color: blue;
	font-size: 0.95rem;
}
</style>